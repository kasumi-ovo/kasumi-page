---
import { Image } from "astro:assets";
import logo from "@/assets/ksm-avatar/ksm_90x90.jpg";
const navs = [
    {
        title: "Home",
        href: "/",
    },
    {
        title: "Posts",
        href: "/posts",
    },
    {
        title: "About",
        href: "/about",
    },
];
---

<header>
    <div class="header-content">
        <a href="/">
            <Image quality="max" src={logo} alt="ksm" class="logo" loading="eager" />
        </a>
        <nav class="top-nav">
            {navs.map(({ title, href }) => <a href={href} class="hover:text-theme">{title}</a>)}
        </nav>
    </div>
</header>

<style>
    @reference "@/styles/global.css";
    header {
        @apply w-full fixed top-0 left-0 bg-white z-10;
    }
    .header-content {
        @apply w-full max-w-3xl mx-auto flex justify-between items-center h-(--height-header);
    }
    .logo {
        @apply rounded-xl shadow-md shadow-gray-400 w-[48px] h-[48px];
    }
    .top-nav {
        @apply flex gap-4 font-bold;
    }
</style>
